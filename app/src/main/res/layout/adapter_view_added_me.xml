<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImageAddedMe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/default_avatar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameAddedMe"
            android:layout_toRightOf="@+id/profileImageAddedMe"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="Username"
            android:textColor="#000"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/acceptRequest"
            android:src="@drawable/ic_check_white_24dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/rejectRequest"
            android:src="@drawable/ic_clear_24dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/acceptRequest"
            android:layout_toStartOf="@+id/acceptRequest"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2000"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        />
</LinearLayout>